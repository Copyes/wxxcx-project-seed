{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "max-len": [2, 120, 4],
        "indent": ["error", 2],
        "comma-dangle": [2, "never"],
        "quotes": ["error", "single"],
        "no-use-before-define": 0,
        "no-param-reassign": 0,
        "consistent-return": 0,
        "no-console": 0,
        "no-cond-assign": 0
    },
    "globals": {
        "App": true,
        "Page": true,
        "wx": true,
        "getApp": true,
        "getCurrentPages": true
    }
}
